    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sliderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ä°stanbul"
        android:textSize="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_40dp"
        app:layout_constraintBottom_toTopOf="@id/slider_itemImageView"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/slider_itemImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:riv_corner_radius="@dimen/dimen_15dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/sliderName"
        />



</androidx.constraintlayout.widget.ConstraintLayout>